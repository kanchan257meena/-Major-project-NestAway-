<% layout('/layouts/boilerplate') -%>

    <body>

        <div class="row">
            <div class="col offset-3">
                <br>

                <h3 class="red">Listing Details :</h3>

                <div class="card ">
                    <img src="<%= listing.image.url  %>" class="card-img-top show-img" alt="...">
                    <div class="card-body">
                        <p class="card-text show-card-text blue">
                            <%= listing.title %>
                        </p>
                        <%= listing.description %> <br>
                            <% if (listing.price) { %>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                                    <% } else { %>
                                        &#8377; Not Available <br>
                                        <% } %><br>
                                            <%= listing.location %> <br>
                                                <%= listing.country %> <br>
                    </div>
                </div>


                <div class="show-btns">
                    <a href="/listings/<%= listing.id  %>/edit" class="btn btn-dark show-btn"> Edit this listing</a>

                    <form method="post" action="/listings/<%= listing.id  %>?_method=Delete">
                        <button class="btn btn-dark show-btn">Delete</button>
                    </form>
                </div>
                <br>
            </div>
        </div>
    </body>