<% layout('/layouts/boilerplate') -%>

    <body>

        <div class="row justify-content-center">
            <div class="col-md-8">
                <br>
                <h3 class="blue show-title">
                    <%= listing.title %>
                </h3>

                <div class="show-card listing-card">
                    <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="...">
                    <div class="show-card-body">
                        <p>Owned by : <%= listing.owner.username %>
                        </p>
                        <%= listing.description %> <br>
                            <% if (listing.price) { %>
                                &#8377; <%= listing.price.toLocaleString("en-IN") %> <br>
                                    <% } else { %>
                                        &#8377; Not Available <br>
                                        <% } %><br>
                                            <%= listing.location %> <br>
                                                <%= listing.country %> <br>
                    </div>
                </div>

                <div class="show-btns ">
                    <a href="/listings/<%= listing.id %>/edit" class="btn btn-dark show-btn ">Edit this listing</a>

                    <form method="post" action="/listings/<%= listing.id %>?_method=Delete">
                        <button class="btn btn-dark show-btn ">Delete</button>
                    </form>

                </div>

                <br>
                <hr width="100%">


                <div class="show-review">

                    <% if(currUser){ %>
                        <h4 class="blue">Leave a Review</h4><br>
                        <form action="/listings/<%= listing.id %>/reviews" method="POST" novalidate
                            class="needs-validation">

                            <!-- <div>
                                <label class="form-label" for="rating">Rating</label><br>
                                <input class="form-range" type="range" min="1" max="5" name="review[rating]"
                                    id="rating">
                            </div> -->

                            <!-- starability -->
                            <fieldset class="starability-slot">
                                <legend>Rating:</legend>
                                <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="1"
                                    checked aria-label="No rating." />
                                <input type="radio" id="first-rate1" name="review[rating]" value="1" />
                                <label for="first-rate1" title="Terrible">1 star</label>
                                <input type="radio" id="first-rate2" name="review[rating]" value="2" />
                                <label for="first-rate2" title="Not good">2 stars</label>
                                <input type="radio" id="first-rate3" name="review[rating]" value="3" />
                                <label for="first-rate3" title="Average">3 stars</label>
                                <input type="radio" id="first-rate4" name="review[rating]" value="4" />
                                <label for="first-rate4" title="Very good">4 stars</label>
                                <input type="radio" id="first-rate5" name="review[rating]" value="5" />
                                <label for="first-rate5" title="Amazing">5 stars</label>
                            </fieldset><br>
                            <div>
                                <label class="form-label" for="comment">Comment</label><br>
                                <textarea class="form-control" name="review[comment]" id="comment" cols="100" rows="5"
                                    required></textarea>
                                <div class="invalid-feedback">
                                    Please enter a comment.
                                </div>
                            </div>

                            <br>
                            <button class="btn btn-dark">Submit</button>
                        </form>

                </div>
                <br>
                <br>
                <hr>
                <% } %>





                    <div class="container my-4">
                        <h4>All Reviews</h4>
                        <div class="row g-3"> <!-- g-3 adds equal spacing -->
                            <% for (review of listing.reviews) { %>
                                <div class="col-12 col-md-6 col-lg-4">
                                    <div class="card h-100 shadow-sm border-0">
                                        <div class="card-body">
                                            <h5 class="card-title"><b>
                                                    <%= review.author.username %>
                                                </b></h5>
                                            <p class="starability-result s" data-rating="<%= review.rating %>">
                                            </p>
                                            <p class="card-text">
                                                <%= review.comment %>
                                            </p>


                                        </div>
                                        <form class="mb-3"
                                            action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE"
                                            method="POST">
                                            <button class="btn btn-sm btn-dark ">Delete</button>
                                        </form>
                                    </div>

                                </div>
                                <% } %>
                        </div>
                    </div>

            </div>
        </div>

    </body>