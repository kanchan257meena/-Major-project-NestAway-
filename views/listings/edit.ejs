<% layout('layouts/boilerplate') %>


<!-- <div class="row"> -->
<div class="col-8 offset-2">

<br> 
  <h3 class="red">Edit Listing</h3>
  <form method="POST" action="/listings/<%= listing.id %>?_method=PUT" class="mt-3" novalidate class="needs-validation" enctype="multipart/form-data">

    <div class="mb-3">
      <label class="form-label">Title</label>
      <input type="text" name="listing[title]" value="<%= listing.title %>" class="form-control grey">
    </div>

    <div class="mb-3">
      <label class="form-label">Description</label>
      <textarea name="listing[description]" class="form-control grey"><%= listing.description %></textarea>
    </div>

    <!-- image -->
      <div class="mb-3 "> 
        <label class="form-label">Uploaded Image</label><br>
        <img src="<%= listing.image.url %>" height="120px"  alt="">
      </div>


    <div class="mb-3">
      <label class="form-label">Upload new Image</label>
      <input type="file" name="listing[image][url]" value="<%= listing.image.url %>" class="form-control grey">
    </div>

     <div class="mb-3">
      <label class="form-label">Location</label>
      <input type="text" name="listing[location]" value="<%= listing.location %>" class="form-control grey">
    </div>

    <div class="row">
    <div class="mb-3 col-md-4">
      <label class="form-label">Price</label>
      <input type="number" name="listing[price]" value="<%= listing.price %>" class="form-control grey">
    </div>

    <div class="mb-3 col-md-8">
      <label class="form-label">Country</label>
      <input type="text" name="listing[country]" value="<%= listing.country %>" class="form-control grey">
    </div>
    </div>

    <button class="btn btn-dark" style="background-color:  #d90429; border: none;" >Save Changes</button>
    <br> <br>
  </form>


<!-- </div> -->
</div>
